---
import { Image } from "astro:assets";
import { format } from "date-fns";
import Blocks from "./Blocks.astro";
import BlogSidebar from "./BlogSidebar.astro";

const { articles, article, lang } = Astro.props;

const imageURL = `https://cms.fairclouds.life/assets/${article.image}`;
---

<div class="flex gap-28 justify-between px-4 py-2.5">
  <BlogSidebar articles={articles} lang={lang} />
  <main class="w-full max-w-4xl prose">
    <Image src={imageURL} alt="" width={1600} height={900} />
    <time datetime={article.date} class="mb-3 block opacity-60"
      >{format(article.date, "EEEE, dd.MM.yyyy")}</time
    >
    <h1>
      {article.translation.title}
    </h1>
    <!-- {page.translation.content} -->
    <Blocks content={article.translation.content.blocks} />
  </main>
</div>
