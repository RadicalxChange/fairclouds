---
import { languages } from "../i18n/ui";
import { getLangFromUrl } from "../i18n/utils";
import directus from "../lib/directus";
import Menu from "./Menu.svelte";

const currentLang = getLangFromUrl(Astro.url);

import { readSingleton } from "@directus/sdk";

const home = await directus.request(
  readSingleton("home", {
    deep: {
      translations: {
        _filter: {
          _and: [
            {
              languages_code: { _eq: currentLang },
            },
          ],
        },
      },
    },
    fields: [{ translations: ["info", "about"] }],
  }),
);

const infoContent = home.translations[0].info?.blocks;
const aboutContent = home.translations[0].about?.blocks;
---

<Menu info={infoContent} about={aboutContent} client:load />
