---
// dont prerender as this page will be unique.
export const prerender = false;

import { getLangFromUrl } from "../../i18n/utils";

import Layout from "../../layouts/Layout.astro";
import directus from "../../lib/directus";
import { withToken, readMe } from '@directus/sdk';
import { parse } from "cookie";

import CheckoutEmbed from "../../components/CheckoutEmbed.svelte";
import LoginListener from "../../components/LoginListener.svelte";

let currentUser = null;

// Read cookies from the incoming request
const cookies = parse(Astro.request.headers.get("cookie") || "");
const authToken = cookies.auth_token;

if (authToken) {
  try {
    currentUser = await directus.request(
      withToken(authToken,
        readMe({
          fields: [
            "*",
            "licenses.*",
            "licenses.cloud_id.id",
            "licenses.cloud_id.name",
            "licenses.cloud_id.x",
            "licenses.cloud_id.y",
            "licenses.cloud_id.width",
            "licenses.cloud_id.height",
            "licenses.cloud_id.drawings.*"
          ],
        })
      )
    );
  } catch (error) {
    console.error("Failed to fetch user or validate token:", error);
  }
}

const PUBLIC_STRIPE_KEY = import.meta.env.PUBLIC_STRIPE_KEY;
const { origin } = Astro.url;
const lang = getLangFromUrl(Astro.url);
---

<Layout title="Checkout ☁️ Fairclouds" theme="white">
  <div class="p-4">
    <h1>Checkout</h1>
    {currentUser ? (
      <CheckoutEmbed
        PUBLIC_STRIPE_KEY={PUBLIC_STRIPE_KEY}
        lang={lang}
        origin={origin}
        currentUser={currentUser}
        client:load
      />
    ) : (
      <p class="my-8">You must be logged in to check out.</p>
      <div class="w-full max-w-[610px] rounded-default bg-primary text-white shadow-cloud p-3 sm:p-5">
        {/* Listens for successful login event and reloads the page. */}
         <LoginListener lang={lang} currentUser={currentUser} client:load />
      </div>
    )}
  </div>
</Layout>
